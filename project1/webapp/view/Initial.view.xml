<mvc:View
    controllerName="project1.controller.Initial"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns:smartFilterBar="sap.ui.comp.smartfilterbar"
    xmlns:smartTable="sap.ui.comp.smarttable"
    xmlns="sap.m"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:l="sap.ui.layout"
    xmlns:forms="sap.ui.layout.form"
    xmlns:vk="sap.ui.vk"
    height="100%"
    width="100%"
>
    <App id="app">
        <pages>
            <Page id="page" showHeader="false">
                <content>
                    <l:Grid class="sapUiLargeMargin" id="main-grid">
                        <VBox id='left.scan' class='leftScanVbox'>
                            <layoutData>
                                <l:GridData span="XL6 L6 M6 S6" />
                            </layoutData>
                            <!--<html:div id="scandit-barcode-picker" style="max-width: 40%; max-height: 40%;"></html:div>  -->
                            <VBox id="recordDetail.layoutVBox">
                                <forms:Form id="recordDetail.layoutForm" editable="true">
                                    <forms:layout>
                                        <forms:ResponsiveGridLayout
                                            id="recordDetail.layoutGridLayout"
                                            labelSpanL="4"
                                            labelSpanM="6"
                                            labelSpanS="4"
                                            adjustLabelSpan="true"
                                            emptySpanL="0"
                                            emptySpanM="0"
                                            emptySpanS="4"
                                            columnsXL="1"
                                            columnsL="1"
                                            columnsM="1"
                                            columnsS="2"
                                            singleContainerFullSize="false"
                                        />
                                    </forms:layout>
                                    <forms:formContainers>
                                        <forms:FormContainer>
                                            <forms:formElements>
                                                <forms:FormElement>
                                                    <forms:label class="refNrlabel">
                                                        <Label text="{i18n>refNrLabel}" labelFor="odoRefNrInput" />
                                                    </forms:label>
                                                    <forms:fields>
                                                        <Input id="odoRefNrInput" change="onODOInput" required="true" placeholder="80000001" />
                                                    </forms:fields>
                                                </forms:FormElement>
                                            </forms:formElements>
                                        </forms:FormContainer>
                                    </forms:formContainers>
                                </forms:Form>
                            </VBox>
                            <html:div id="scandit-barcode-picker" />
                            <VBox id='canvasContainer' visible="false">
                                <html:canvas id="myCanvas1" width="512" height="288" />
                            </VBox>
                            <Button id="triggerScanInputButton" icon="sap-icon://bar-code" press=".onScanInputButton" text="Scan product" width="90%" class="scanBtn" />
                            <HBox>
                                <Button id="voice" icon="sap-icon://microphone" press="onSpeek" type="Emphasized" />
                                <svg id="voice_wave" width="auto" height="25" xmlns="http://www.w3.org/2000/svg" version="1.1">
                                    <rect x='0' y='0' width='4' height='20' fill='#ff6700'>
                                        <animate attributeName='height' values="20;10;20" begin='0' dur='0.8s' repeatCount="indefinite" />
                                    </rect>
                                    <rect x='7' y='0' width='4' height='20' fill='#ff6700'>
                                        <animate attributeName='height' values="20;10;20" begin='0.2s' dur='0.8s' repeatCount="indefinite" />
                                    </rect>
                                    <rect x='14' y='0' width='4' height='20' fill='#ff6700'>
                                        <animate attributeName='height' values="20;10;20" begin='0.4s' dur='0.8s' repeatCount="indefinite" />
                                    </rect>
                                    <rect x='21' y='0' width='4' height='20' fill='#ff6700'>
                                        <animate attributeName='height' values="20;10;20" begin='0.6' dur='0.8s' repeatCount="indefinite" />
                                    </rect>
                                    <rect x='28' y='0' width='4' height='20' fill='#ff6700'>
                                        <animate attributeName='height' values="20;10;20" begin='0.8s' dur='0.8s' repeatCount="indefinite" />
                                    </rect>
                                </svg>
                            </HBox>
                            <!--第二个小图标 设置高度-->

                            <VBox id="scanResultVBox" class="scanResultVBox">
                                <Table id="scanResultTable" backgroundDesign="Transparent" inset="false" items="{
                                    path: 'odoProd>/'
                                }">
                                    <columns>
                                        <Column minScreenWidth="Tablet" demandPopin="true" />

                                        <Column minScreenWidth="Tablet" demandPopin="true" />

                                        <Column minScreenWidth="Tablet" demandPopin="true" />

                                        <Column minScreenWidth="Tablet" demandPopin="true" />

                                        <Column minScreenWidth="Tablet" demandPopin="true" />
                                    </columns>
                                    <items>
                                        <ColumnListItem>
                                            <cells>
                                                <Text text="{odoProd>Product}" />
                                                <Text text="{odoProd>ProductDesc}" />
                                                <Text text="{odoProd>ProductQuantity}" />
                                                <Text text="{odoProd>ProductUoM}" />
                                                <Text text="{odoProd>ProductBatch}" />
                                            </cells>
                                        </ColumnListItem>
                                    </items>
                                </Table>
                            </VBox>
                        </VBox>
                        <VBox id='right.threejs'>
                            <layoutData>
                                <l:GridData span="XL6 L6 M6 S6" />
                            </layoutData>
                            <html:div id="threejsviewer">
                                <HBox visible="false">
                                    <Text id="handlingUnitText" text="{i18n>packHandlingUnit}" />
                                    <Text id="packagingMaterialText" text="{i18n>packagingMaterial}" />
                                </HBox>
                                <VBox>
                                    <html:canvas id="myCanvas2" class="canvas2" width="1160" height="654" />
                                </VBox>
                                <HBox alignItems="Center" alignContent="SpaceAround" visible="false">
                                    <!-- <l:Grid> -->
                                    <Button id="defaultViewButton" text="{i18n>default}" press="onDisplayDefaultView" />
                                    <Button id="backViewButton" text="{i18n>backView}" press="onDisplayBackView" />
                                    <Button id="topViewButton" text="{i18n>topView}" press="onDisplayTopView" />
                                    <Button id="rightViewButton" text="{i18n>rightView}" press="onDisplayRightView" />
                                    <Button id="leftViewButton" text="{i18n>leftView}" press="onDisplayLeftView" />
                                    <Button id="showAllButton" text="{i18n>showAll}" press="onDisplayAllView" />
                                </HBox>
                                <!-- </l:Grid> -->
                                <Button visible="false" id="closeButton" text="{i18n>closePackHandlingUnit}" press="onCloseHU" />
                            </html:div>
                        </VBox>
                    </l:Grid>
                </content>
            </Page>
        </pages>
    </App>
</mvc:View>
