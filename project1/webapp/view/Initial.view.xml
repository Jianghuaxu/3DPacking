<mvc:View
    controllerName="project1.controller.Initial"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns:smartFilterBar="sap.ui.comp.smartfilterbar"
	xmlns:smartTable="sap.ui.comp.smarttable"
    xmlns="sap.m"
    xmlns:html="http://www.w3.org/1999/xhtml"
>
<html:div id="scandit-barcode-picker" style="max-width: 480px; max-height: 240px;"></html:div>  
    <Shell id="shell">
        <App id="app">
            <pages>
                <Page id="page" title="{i18n>title}">
                    <content >
                    <Button id="triggerScanInputButton"
                        icon="sap-icon://bar-code"
                        press=".onScanInputButton"
                        text="Scan"
                        type="Emphasized"/>
                    <Table id="idProductsTable"
                        inset="false"
                        items="{
                            path: '/WhsePhysicalInventoryItem'
                        }">
                        
                        <infoToolbar>
                            <OverflowToolbar>
                                <Label text="PI Items"/>
                                
                            </OverflowToolbar>
                        </infoToolbar>
                        <columns>
                            <Column width="auto">
                                <Text text="PI Number" />
                            </Column>
                            <Column width="auto">
                                <Text text="PI Item Number" />
                            </Column>
                            <Column
                                hAlign="End">
                                <Text text="Warehouse Order" />
                            </Column>
                        </columns>
                        <items>
                            <ColumnListItem vAlign="Middle">
                                <cells>
                                    
                                    <Text
                                        text="{PhysicalInventoryDocNumber}" />
                                    <Text
                                        text="{PhysicalInventoryItemNumber}" />
                                    <Text
                                        text="{WarehouseOrder}" />
                                    
                                </cells>
                            </ColumnListItem>
                        </items>
                    </Table>
                    <VBox>
                    <Table id="scanResultTable"
                        inset="false"
                        items="{
                            path: 'scan>/'
                        }">
                        <headerToolbar>
                            <OverflowToolbar>
                                <content>
                                    <Title text="Scan Result" level="H2"/>
                                    <ToolbarSpacer />
                                    <CheckBox text="InfoToolbar"
                                        select="onSelect"/>
                                </content>
                            </OverflowToolbar>
                        </headerToolbar>
                        <infoToolbar>
                            <OverflowToolbar>
                                <Label text="Scan Result List"/>
                            </OverflowToolbar>
                        </infoToolbar>
                        <columns>

                            <Column
                                minScreenWidth="Tablet"
                                demandPopin="true">
                                <Text text="Product" />
                            </Column>

                            <Column
                                minScreenWidth="Tablet"
                                demandPopin="true">
                                <Text text="Loc: bottom left" />
                            </Column>

                            <Column
                                minScreenWidth="Tablet"
                                demandPopin="true">
                                <Text text="Loc: bottom right" />
                            </Column>


                            <Column
                                minScreenWidth="Tablet"
                                demandPopin="true">
                                <Text text="Loc: top left" />
                            </Column>

                            <Column
                                minScreenWidth="Tablet"
                                demandPopin="true">
                                <Text text="Loc: top right" />
                            </Column>

                        </columns>
                        <items>
                            <ColumnListItem>
                                <cells>
                                    <Text
                                        text="{scan>Result}" />
                                    
                                    <Text
                                        text="{scan>bl}" />
                                    
                                    <Text
                                        text="{scan>br}" />

                                    <Text
                                        text="{scan>tl}" />
                                    
                                    <Text
                                        text="{scan>tr}" />

                                </cells>
                            </ColumnListItem>
                        </items>
                    </Table>
                    </VBox>
                    </content>
                </Page>
            </pages>
        </App>
    </Shell>
</mvc:View>
